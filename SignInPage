    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String email = EmailField.getText();
        String pass = PassField.getText();
        boolean validate = ManagerController.validateManager(email, pass);
        if(validate) {
            setVisible(false);
            try {
                String query = "select ManagerName from Manager where ManagerEmail='"+email+"'";
                ResultSet rs = dbops.selectQuery(query);
                while(rs.next()){
                    new UserInterface(rs.getString("ManagerName")).setVisible(true);
                }
            }catch (SQLException ex) {
                Logger.getLogger(SignInPage.class.getName()).log(Level.SEVERE, null, ex);
            }
        }else if(EmailField.getText().equals("")){
            JOptionPane.showMessageDialog(null, "Please input password");
        }else if(PassField.getText().equals("")){
            JOptionPane.showMessageDialog(null, "Please input Email");
        }else if(EmailField.getText().equals("") && PassField.getText().equals("")){
            JOptionPane.showMessageDialog(null, "Please input Email and Password");
        }else{
            JOptionPane.showMessageDialog(null, "Wrong email or password!");
        }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        setVisible(false);
        new SignUpManager().setVisible(true);
    }                                        

    private void jCheckBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if(jCheckBox1.isSelected()){
            PassField.setEchoChar((char) 0);
        }else{
            PassField.setEchoChar('*');
        }
    }                                          

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        EmailField.setText("");
        PassField.setText("");
    }                                        

