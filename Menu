    private void update_table(){
        String query = "select * from MenuOrder";
        ResultSet rs = dbops.selectQuery(query);
        jTable1.setModel(DbUtils.resultSetToTableModel(rs));
    }
    
    private void key_auto(){
        try{
            String query1 = "select food_key from food ORDER BY food_key DESC LIMIT 1";
            ResultSet rs = dbops.selectQuery(query1);
            if(rs.next()){
                int key = rs.getInt(1);
                int n = key+1;
            }
        } catch(SQLException e){
            JOptionPane.showMessageDialog(null, e);
        }    
    }
    
    public void updateJspinner(){
        try{
            String query = "select food_name from food";
            ResultSet rs = dbops.selectQuery(query);
            while(rs.next()){
                String name = rs.getString("food_name");
                jComboBox1.addItem(name);
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
    }
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        setVisible(false);
        new Order().setVisible(true);
    }                                        

    private void ComponentShown(){
        String name = (String) jComboBox1.getSelectedItem();
        try{
           String query = "select * from food where food_name='"+name+"'";
            ResultSet rs = dbops.selectQuery(query);
            while(rs.next()){
                //get price from data:
                String price = rs.getString(3);
                jTextField1.setText(price);
                jTextField2.setText(price);
            } 
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
    }
    
    private void btnAddToCartActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        //create new food
        MenuOrder menuorder = new MenuOrder();
        //get the name from the text fields
        menuorder.setName((String) jComboBox1.getSelectedItem());
        menuorder.setPrice(jTextField1.getText());
        menuorder.setQuantity(String.valueOf(jSpinner1.getValue()));
        menuorder.setTotal(jTextField2.getText());
        key_auto();
        //execute add operation
        MenuOrderController.addOrder(menuorder);
        jButton1.setEnabled(true);
        update_table();
        key_auto();
    }                                            

    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String selectedvalue = (String) jComboBox1.getSelectedItem();
        try{
            String query = "select * from food where food_name='"+selectedvalue+"'";
            ResultSet rs = dbops.selectQuery(query);
            while(rs.next()){
                String price = rs.getString(3);
                jTextField1.setText(price);
                jTextField2.setText(price);
                jSpinner1.setValue(1);
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
    }                                          

    private void jSpinner1StateChanged(javax.swing.event.ChangeEvent evt) {                                       
        // TODO add your handling code here:
        int quantity = (Integer) jSpinner1.getValue();
        if(quantity <=1){
            jSpinner1.setValue(1);
            quantity = 1;
        }
        String price = jTextField1.getText();
        int price1 = Integer.parseInt(price);
        int total= price1 * quantity;
        String total1 = String.valueOf(total);
        jTextField2.setText(total1);
    }                                      

    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
       
    }                                    

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        btnAddToCart.setEnabled(false);
        jButton2.setEnabled(true);
        jButton3.setEnabled(true);
        jButton5.setEnabled(true);
        jButton4.setEnabled(false);
        DefaultTableModel dtm = (DefaultTableModel) jTable1.getModel();
        try{
            jComboBox1.removeAllItems();
            String query = "select name from MenuOrder";
            ResultSet rs = dbops.selectQuery(query);
            while(rs.next()){
                String Ordername = rs.getString("name");
                jComboBox1.addItem(Ordername);
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String name = (String) jComboBox1.getSelectedItem();
        int a = JOptionPane.showConfirmDialog(null, "Confrim deletion", "Confirm Deletion", JOptionPane.YES_NO_OPTION);
        if(a == 0){
            MenuOrderController.deleteOrder(name);
            jComboBox1.removeAllItems();
        }
        try{
            String query = "select name from MenuOrder";
            ResultSet rs = dbops.selectQuery(query);
            while(rs.next()){
                String name1 = rs.getString("name");
                jComboBox1.addItem(name1);
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, e);
        }
        update_table();
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        btnAddToCart.setEnabled(true);
        jButton2.setEnabled(false);
        jButton3.setEnabled(false);
        jButton5.setEnabled(false);
        jButton4.setEnabled(true);
        jComboBox1.removeAllItems();
        updateJspinner();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        // TODO add your handling code here:
        String quantity = String.valueOf(jSpinner1.getValue());
        String total = jTextField2.getText();
        String name = (String) jComboBox1.getSelectedItem();
        //perform update operation
        MenuOrderController.updateOrder(name, quantity, total);
        update_table();
    }                                        

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        setVisible(false);
        new UserInterface().setVisible(true);
    }                                        

