    private void update_table(){
        String query = "select * from food";
        ResultSet rs = dbops.selectQuery(query);
        foodtable.setModel(DbUtils.resultSetToTableModel(rs));
    }
    
    private void key_auto(){
        try{
            String query1 = "select food_key from food ORDER BY food_key DESC LIMIT 1";
            ResultSet rs = dbops.selectQuery(query1);
            if(rs.next()){
                int key = rs.getInt(1);
                int n = key+1;
                auto_key.setText(Integer.toString(n));
            }
        } catch(SQLException e){
            JOptionPane.showMessageDialog(null, e);
        }    
    }
    
    private void UpdateFoodActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String new_food_name = clickfnametxtfield.getText();
        String food_key = fkeytxtfield.getText();
        String new_food_price = jTextField1.getText();
        //perform update operation
        FoodController.updateFood(new_food_name, new_food_price, food_key);
        update_table();
    }                                          

    private void AddfoodActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here
        //create new food
        Food food = new Food();
        //get the name from the text fields
        food.setFood_name(fnametxtfield.getText());
        food.setFood_price(fpricetxtfield.getText());
        food.setFood_quantity(fquantitytxtfield.getText());
        key_auto();
        //execute add operation
        FoodController.addFood(food);
        update_table();
        key_auto();
        fnametxtfield.setText("");
        fpricetxtfield.setText("");
        fquantitytxtfield.setText("");

    }                                       
   
    private void formComponentShown(java.awt.event.ComponentEvent evt) {                                    
        // TODO add your handling code here
        //display the current entities in the sql food table
        
    }                                   

    private void foodtableMouseClicked(java.awt.event.MouseEvent evt) {                                       
        // TODO add your handling code here:
        //get current index of the mouse
        int index = foodtable.getSelectedRow();
        //import model
        DefaultTableModel dtm = (DefaultTableModel) foodtable.getModel();
        //get the value
        String food_key = dtm.getValueAt(index, 0).toString();
        String food_name = dtm.getValueAt(index, 1).toString();
        String food_price = dtm.getValueAt(index, 2).toString();
        //display the selected text
        clickfnametxtfield.setText(food_name);
        fkeytxtfield.setText(food_key);
        jTextField1.setText(food_price);
    }                                      

    private void ShowbtnActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        try{
            //fetch all the tuples from db
            String query = "select * from food";
            ResultSet rs = dbops.selectQuery(query);
            ResultSetMetaData rsmd = rs.getMetaData();
            DefaultTableModel dtm = (DefaultTableModel) foodtable.getModel();
            dtm.setRowCount(0);
            
            int cols = rsmd.getColumnCount();
            String[] colname = new String[cols];
            for(int i = 0; i < cols; i++)
                colname[i] = rsmd.getColumnName(i+1);
            dtm.setColumnIdentifiers(colname);
            String no,name,price,quantity;
            while(rs.next()){
                no=rs.getString(1);
                name=rs.getString(2);
                price=rs.getString(3);
                quantity=rs.getString(4);
                String[] row = {no,name,price,quantity};
                dtm.addRow(row);
            }
            
            //iterate through every tuple from the list
        } catch (SQLException e) {
            Logger.getLogger(MenuItem.class.getName()).log(Level.SEVERE, null, e);
        }    
    }                                       

    private void deletebtnActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String food_key = fkeytxtfield.getText();
        int a = JOptionPane.showConfirmDialog(null, "Confrim deletion", "Confirm Deletion", JOptionPane.YES_NO_OPTION);
        if(a == 0){
            FoodController.deleteFood(food_key);
        }
        update_table();
    }                                         

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        setVisible(false);
        new UserInterface().setVisible(true);
    }                                        

