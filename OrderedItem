    private void update_table(){
        String query = "select * from OrderedItem";
        ResultSet rs = dbops.selectQuery(query);
        jTable1.setModel(DbUtils.resultSetToTableModel(rs));
    }
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        setVisible(false);
        new UserInterface().setVisible(true);
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        //calculate currently:
        int numrow = jTable1.getRowCount();
        int tot = 0;
        for(int i = 0; i < numrow; i++){
            double val = Integer.valueOf(jTable1.getValueAt(i, 4).toString());
            tot += val;
        }
        jLabel2.setText(Integer.toString(tot));
        //calculate Profit
        int curr = Integer.parseInt(jLabel2.getText());
        int salary = Integer.parseInt(jLabel8.getText());
        int profit = curr - salary;
        String profit1 = String.valueOf(profit);
        jLabel9.setText(profit1);
    }                                        

