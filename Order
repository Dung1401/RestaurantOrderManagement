    private void grandTotal(){
        int numrow = jTable1.getRowCount();
        
        double tot = 0;
        
        for(int i = 0; i < numrow; i++){
            double val = Double.valueOf(jTable1.getValueAt(i, 4).toString());
            tot += val;
        }
        jLabel2.setText(Double.toString(tot));
    }
    
    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        setVisible(false);
        new Menu().setVisible(true);
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        DefaultTableModel dtm = (DefaultTableModel) jTable1.getModel();
        int numrow = jTable1.getRowCount();
        for(int i = 0;i < numrow;i++){
            MenuOrder ordereditem = new OrderedItem();
            int OrderID = Integer.parseInt(dtm.getValueAt(i, 0).toString());
            String name = dtm.getValueAt(i, 1).toString();
            String price = dtm.getValueAt(i, 2).toString();
            String quantity = dtm.getValueAt(i, 3).toString();
            String total = dtm.getValueAt(i, 4).toString();
            //add into table
            ordereditem.setOrderID(OrderID);
            ordereditem.setName(name);
            ordereditem.setPrice(price);
            ordereditem.setQuantity(quantity);
            ordereditem.setTotal(total);
            OrderedItemController.placeOrder((OrderedItem) ordereditem);
        }
    }                                        
    
    private void update_table(){
        String query = "select * from MenuOrder";
        ResultSet rs = dbops.selectQuery(query);
        jTable1.setModel(DbUtils.resultSetToTableModel(rs));
    }
    
